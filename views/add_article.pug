extends layout

block content
  h1 #{title}
  form(method='post' , action='/articles/add')
    .form-group
      label Title
      input.form-control(type='text', name ="title")
    .form-group
      label Subtitle
      input.form-control(type='text', name ="subtitle")
    .form-group
      label author
      input.form-control(type='text', name ="author")
    .form-group
      label Category
      select.form-control(name="category")
        each category, i in categories
          option(value=category._id) #{category.title}
    .form-group
      label Article's body
      textarea.form-control(name ="article_body")
    .row
      .col-11
        input.btn.primary(type='submit' , name="submit" , value="Save")
      .col-1
        a.btn.btn-btn-link(href='/manage/articles') Back

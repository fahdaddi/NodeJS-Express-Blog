extends layout

block content
  h1 #{title}
  form(method='post' , action='/categories/add')
    .form-group
      label Title
      input.form-control(type='text', name ="title")
    .form-group
      label Description
      textarea.form-control(name ="description")
    .row
      .col-11
        input.btn.primary(type='submit' , name="submit" , value="Save")
      .col-1
        a.btn.btn-btn-link(href='/manage/categories') Back

extends layout

block content
  h1 #{title}
  form(method='post' , action='/categories/edit/'+category._id)
    .form-group
      label Title
      input.form-control(type='text', name ="title" value=category.title)
    .form-group
      label Description
      textarea.form-control(name ="description") #{category.description}
    input.btn.primary(type='submit' , name="submit" , value="Save")
    a.btn.btn-btn-link(href='/manage/categories') Back

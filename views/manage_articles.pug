extends layout

block content
  .row
    .col-9
      h1 #{title}
    .col-3
      a(class="btn btn-outline-warning add-btn" , href="/manage/articles/add") Add a new article
  each article, i in articles
    .jumbotron
      .row
        .col-8
          h4 #{article.title}
          p #{article.subtitle}
        .col-2
          a(class='btn btn-primary' href='/manage/articles/edit/'+article._id) Edit
        .col-1
          a(class='btn btn-danger remove-article' , href='/manage/articles/', article_id=article._id) Remove

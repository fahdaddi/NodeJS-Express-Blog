extends layout

block content
  .row
    .col-9
      h1 #{title}
    .col-3
      a(class="btn btn-outline-warning add-btn" , href="/manage/categories/add") Add a new category
  table.table.table-striped
    tr
      th Category title
      th
      th
      th
      th
    each category, i in categories
      tr
        td #{category.title}
        td
          p
        td
          a(class="btn btn-dark" , href="/manage/categories/edit/"+category._id) Edit
        td
          a(class="btn btn-danger delete-category" , href="/manage/categories" ,delete_cat_id=category._id) Delete
        td
          a(class="btn btn-info" , href="/manage/categories/dupledit/"+category._id) Duplicate & Edit
